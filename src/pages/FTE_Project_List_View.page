<apex:page controller="FTEProjectListController" docType="html-5.0" action="{!initProjectList}">
    <style type="text/css">
        .fteProjectCell {
            cursor: pointer;
        }
        .fteProjectCell:hover {
            background: #1797C0 !important;
        }
        .overbilled {
            color: red !important;
        }
        .projectTable {
            margin-top: 15px;
            margin-bottom: 10px;
        }
        .leftMargin {
            margin-left: 10px;
        }
    </style>

    <apex:pageBlock title="List of Projects" id="projectListViewIBlock">
        <apex:form >

            <apex:actionPoller action="{!loadWorkCardJobStatus}" enabled="{!workCardJobStatus.isRunning}"
                        reRender="projectListViewIBlock" interval="5"/>

            <apex:outputPanel id="jobLoader" rendered="{!workCardJobStatus.isRunning}">
                <apex:image url="/img/loading32.gif" height="10px" />
                FTE Tracker is currently calculating Empolyee Work Cards {!workCardJobStatus.jobItemsProcessed}/{!workCardJobStatus.totalJobItems}
            </apex:outputPanel>

            <apex:outputPanel id="projectList" rendered="{!!workCardJobStatus.isRunning}">
                <apex:actionstatus id="loadingDiv">
                    <apex:facet name="start">
                        <div class="waitingSearchDiv" id="el_loading" style="background-color: #fbfbfb; height:100%;opacity:0.65;width:100%;">
                            <div class="waitingHolder" style="left : 50%; top : 50%; position: fixed; width: 91px;">
                                <img class="waitingImage" src="{!$Resource.BrokenCircle}" title="Please Wait..." />
                            </div>
                        </div>
                    </apex:facet>
                </apex:actionstatus>

                <apex:outputPanel layout="block" id="messages">
                    <apex:pageMessages />
                </apex:outputPanel>

                <apex:pageBlockSection columns="1" id="serachSection">
                <apex:outputLabel value="Search Project    " />
                <apex:outputPanel >
                    <apex:inputText value="{!seachProjectName}" id="searchProjectText" onkeydown="if(event.keyCode == 13) { this.blur(); searchProjectJs(); }"/>
                    <apex:commandButton value="Search" action="{!searchProject}" status="loadingDiv" id="searchProjects" reRender="projectList" />
                </apex:outputPanel>
                </apex:pageBlockSection>

                <apex:pageBlockSection columns="1">
                    <apex:pageBlockTable id="fteContractList" value="{!listToSubmit}" var="fteProject" styleClass="projectTable">
                        <apex:column headerValue="FTE Project Name" value="{!fteProject.name}" styleClass="fteProjectCell" onclick="goToIndividualProjectView('{!fteProject.Id}');" />
                    </apex:pageBlockTable>
                </apex:pageBlockSection>

                <!-- Pagination -->
                <table style="width: 100%">
                    <tr>
                        <td>Page: <apex:outputText value=" {!projectsPagination.pageNumber} of {!CEILING(projectsPagination.resultSize / projectsPagination.pageSize)}"/></td>
                        <td align="center">
                            <apex:commandLink status="loadingDiv" action="{!projectsPagination.previousPage}" value="« Previous" rendered="{!projectsPagination.hasPrevious}" reRender="projectList" />
                            <apex:outputText style="color: #ccc;" value="« Previous" rendered="{!NOT(projectsPagination.hasPrevious)}"/>
                            &nbsp;&nbsp;
                            <apex:commandLink status="loadingDiv" action="{!projectsPagination.nextPage}" value="Next »" rendered="{!projectsPagination.hasNext}" reRender="projectList" />
                            <apex:outputText style="color: #ccc;" value="Next »" rendered="{!NOT(projectsPagination.hasNext) }"/>
                        </td>
                        <td align="right">
                            Records per page:&nbsp;&nbsp;
                            <apex:selectList value="{!projectsPagination.pageSize }" size="1" onchange="resetPageNum();" >
                                <apex:selectOption itemValue="10" itemLabel="10"/>
                                <apex:selectOption itemValue="20" itemLabel="20"/>
                                <apex:selectOption itemValue="50" itemLabel="50"/>
                                <apex:actionSupport event="onchange" reRender="projectList"/>
                            </apex:selectList>
                        </td>
                    </tr>
                </table>

                <apex:actionFunction status="loadingDiv" action="{!projectsPagination.resetPageNumber}" name="resetPageNum" reRender="projectList" />
                <apex:actionFunction action="{!goToIndividualProjectView}" name="goToIndividualProjectView" reRender="projectList" >
                    <apex:param name="contractId" assignTo="{!contractId}" value=""/>
                </apex:actionFunction>
                <apex:actionFunction action="{!searchProject}" name="searchProjectJs" status="loadingDiv" reRender="projectList" />

                <apex:outputPanel styleClass="leftMargin">
                    <apex:commandButton action="{!goToEmployeeListView}" value="Employee List" id="backButton" />
                </apex:outputPanel>

            </apex:outputPanel>
        </apex:form>
    </apex:pageBlock>
</apex:page>