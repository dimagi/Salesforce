<apex:page controller="FTEIndividualProjectController" docType="html-5.0" action="{!initIndividualProject}">
    <style type="text/css">
        .fteCell {
            cursor: pointer;
        }
        .fteCell:hover {
            background: #1797C0 !important;
        }
        .fteProjectCell {
            cursor: pointer;
        }
        .fteProjectCell:hover {
            background: #1797C0 !important;
        }
        .topTotal {
            border-top-width: 3px !important;
            border-top-color: black !important;
        }
        .employeeTable {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </style>

    <apex:pageBlock title="Employees Allocated to Project: {!contractName}">
        <apex:form >
            <apex:outputPanel id="projectList">
                <apex:actionstatus id="loadingDiv">
                    <apex:facet name="start">
                        <div class="waitingSearchDiv" id="el_loading" style="background-color: #fbfbfb; height:100%;opacity:0.65;width:100%;">
                            <div class="waitingHolder" style="left : 50%; top : 50%; position: fixed; width: 91px;">
                                <img class="waitingImage" src="{!$Resource.BrokenCircle}" title="Please Wait..." />
                            </div>
                        </div>
                    </apex:facet>
                </apex:actionstatus>

                <apex:outputPanel layout="block" id="messages">
                    <apex:pageMessages />
                </apex:outputPanel>

                <apex:pageBlockSection columns="1" id="yearSection">
                    <apex:outputText id="fteYearName" value="Select year : "/>
                    <apex:selectList id="fteYearSelect" value="{!fteYear}" size="1" onchange="updateFteYear();">
                        <apex:selectOptions value="{!yearsData}"/>
                    </apex:selectList>
                </apex:pageBlockSection>

                <apex:pageBlockTable id="employeeHours" value="{!individualContractDataList}" var="empTime" styleClass="employeeTable">
                    <apex:column onclick="if ('{!empTime.name}' !== 'Total') {goToEmployeeView('{!empTime.objId}');}"
                                headerValue="Name" value="{!empTime.name}" styleClass="{!empTime.nameCss}"/>
                    <apex:column headerValue="{!currentMonthStr}" value="{!empTime.daysArray[0]}" styleClass="{!empTime.cssStyle[12]}" />
                    <apex:column headerValue="{!lastMonthStr}" value="{!empTime.daysArray[1]}" styleClass="{!empTime.cssStyle[12]}" />
                    <apex:column headerValue="{!twoMonthsAgoStr}" value="{!empTime.daysArray[2]}" styleClass="{!empTime.cssStyle[12]}" />
                    <apex:column headerValue="{!threetMonthsAgoStr}" value="{!empTime.daysArray[3]}" styleClass="{!empTime.cssStyle[12]}" />
                    <apex:column headerValue="Before {!threetMonthsAgoStr}" value="{!empTime.daysArray[4]}" styleClass="{!empTime.cssStyle[12]}" />
                    <apex:column headerValue="Fiscal Year {!fiscalYearStr}" value="{!empTime.daysArray[5]}" styleClass="{!empTime.cssStyle[12]}" />
                    <apex:column headerValue="Total Hours to {!currentMonthStr}" value="{!empTime.daysArray[12]}" styleClass="{!empTime.cssStyle[12]}" />
                </apex:pageBlockTable>

                <apex:actionFunction action="{!initIndividualProject}" name="updateFteYear" status="loadingDiv" reRender="employeeHours" />
                <apex:actionFunction action="{!goToEmployeeView}" name="goToEmployeeView" reRender="contractName">
                    <apex:param name="employeeId" assignTo="{!employeeId}" value=""/>
                </apex:actionFunction>
                <apex:commandButton action="{!goToProjectList}" value="Project List" id="backButton" />
            </apex:outputPanel>
        </apex:form>
    </apex:pageBlock>
</apex:page>