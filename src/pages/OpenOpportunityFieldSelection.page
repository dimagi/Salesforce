<apex:page controller="OpenOpportunityFieldSelectionController">

<apex:form >
    <apex:pageBlock >    
    
        <apex:outputPanel layout="block" id="messages">
            <apex:pageMessages ></apex:pageMessages>
        </apex:outputPanel>

        <apex:pageBlockButtons >
        
            <apex:commandButton value="Clear Current Selection" action="{!clearCurrentSelection}" rerender="currentFieldsTable,availableFieldsTable"></apex:commandButton>
        
        </apex:pageBlockButtons>

        <apex:outputPanel layout="block" id="availableFieldsTable">        
        
            <apex:pageBlockSection title="Select Columns" columns="1">
        
                <apex:pageBlockSectionItem >        
			        <apex:selectList value="{!selectedValue}" multiselect="false" size="2">
			            <apex:selectOptions value="{!availableFields}"/>
			        </apex:selectList>			        
		        </apex:pageBlockSectionItem>
		        
		        <apex:pageBlockSectionItem >
		        
		          <apex:commandButton value="Add Value as Column" action="{!addColumn}" rerender="currentFieldsTable,availableFieldsTable,messages"></apex:commandButton>
		        
		        </apex:pageBlockSectionItem>
		        
            </apex:pageBlockSection>        
        
        </apex:outputPanel>
        
        <apex:outputPanel layout="block" id="currentFieldsTable">        
        
            <apex:pageBlockSection title="Current Fields" columns="1" collapsible="false">
        
                <apex:pageBlockTable value="{!currentSelection}" var="row">
                    <apex:column value="{!row.Name}"></apex:column>                
                    <apex:column value="{!row.Label__c}"></apex:column>
                    <apex:column value="{!row.Order__c}"></apex:column>                
                </apex:pageBlockTable>
        
            </apex:pageBlockSection>
        
        </apex:outputPanel>

    </apex:pageBlock>

</apex:form>    
</apex:page>